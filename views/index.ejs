<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shrinker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="shortcut icon" href="https://img.icons8.com/?size=100&id=7867&format=png&color=38d2d2"
        type="image/x-icon">


    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Roboto", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        body {
            background-image: linear-gradient(to top, #dfe9f3 0%, white 100%);
            min-height: 100vh;
            background-size: cover;
        }

        .main-section {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            padding: 1rem;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            max-width: 31rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            border-radius: 10px;
            margin: 2rem;
        }

        .buttons {
            padding-top: 1rem;
            text-align: center;
        }

        .btn-info {
            background-color: #38D2D2;
            background-image: radial-gradient(93% 87% at 87% 89%, rgba(0, 0, 0, 0.23) 0%, transparent 86.18%), radial-gradient(66% 66% at 26% 20%, rgba(255, 255, 255, 0.55) 0%, rgba(255, 255, 255, 0) 69.79%, rgba(255, 255, 255, 0) 100%);
            padding: 5px 25px;
        }

        .form-control {
            background: transparent;
            border: 1px solid #2CBDDA;
        }

        @media (max-width: 768px) {
            .main-section {
                margin: 10px;
            }
        }
    </style>
</head>

<body>
    <div class="main-section">
        <div class="container">
            <h1 class="text-center text-uppercase">Url shrinker</h1>
            <form action="/shortUrls" method="post" class="my-4 row">
                <div class="col-md-12">
                    <label for="fullUrl" class="sr-only form-label">Url</label>
                    <input required placeholder="Enter URl" name="fullUrl" type="url" id="fullUrl"
                        class="form-control mr-2 ">
                    <div class="buttons">
                        <button type="submit" class="btn btn-info text-white">Shrink</button>
                    </div>
                </div>
            </form>
            <!------------- Table ------------->
            <div class="container-fluid">
                <div class="table-responsive">
                    <table class="table table-sm ">
                        <thead>
                            <tr>
                                <th>Full URl</th>
                                <th>Short URL</th>
                                <th>Cliks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% shortUrls.forEach(shortUrl=> { %>
                                <tr>
                                    <td class="text-truncate" style="max-width: 200px;"><a href=" <%=shortUrl.full %>">
                                            <%= shortUrl.full %>
                                        </a>
                                    </td>
                                    <td class="text-truncate" style="max-width: 100px;"><a href=" <%=shortUrl.short %>">
                                            <%= shortUrl.short %>
                                        </a>
                                    </td>
                                    <td>
                                        <%= shortUrl.clicks %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>